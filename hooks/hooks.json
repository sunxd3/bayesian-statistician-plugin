{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/delegate-check.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/check-file-length.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/check-shared-utils-import.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PLUGIN_ROOT/hooks/check-ruff.sh"
          }
        ]
      }
    ]
  }
}
